<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".GPActivity">

    <EditText
        android:id="@+id/editTextDoctorName"
        android:layout_width="344dp"
        android:layout_height="44dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="Doctor's name"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#F8F6F6"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGPLogCreateHeader" />

    <Button
        android:id="@+id/createDoctorLogButton"
        android:layout_width="143dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/input_bg"
        android:text="Create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCallTopic" />

    <EditText
        android:id="@+id/editTextCallTopic"
        android:layout_width="344dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:hint="Topic of the call"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDoctorName" />

    <TextView
        android:id="@+id/textViewGPLogCreateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create a new GP call log"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>